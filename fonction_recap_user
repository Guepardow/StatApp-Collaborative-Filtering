recap_user=function(U1,U2,U3,U4,data.movies,data.users)
{
  U=rbind(U1,U2,U3,U4)
  nb.users = dim(data.users)[1]
  
  ratings.per.user = matrix(0, nrow = nb.Users, ncol = 7) 
  ratings.per.user= as.data.frame(ratings.per.user)
  colnames(ratings.per.user) = c("userID", "nb.movie.see","avg", "sd", "max", "min", "median")
  
  # matrice comprenant l'ID de l'utilisateur 
  #                    le nombre de films notés par utilisateur
  #                    la moyenne des notes
  #                    l'écart-type des notes
  #                    la note maximale 
  #                    la note maximale 
  #                    la mediane des notes
  
  for (user in 1:nb.users) 
  { 
    x=U$rating[U$userID == user]
    ratings.per.user[user,] = c(user,length(x),round(mean(x),2),round(sd(x),2),max(x),min(x),median(x))
  }
  rm(x,user,nb.users,U)
                              
  recap.users = cbind( data.users , ratings.per.user$nb.movie.see , ratings.per.user$avg ,ratings.per.user$sd , ratings.per.user$max , ratings.per.user$min , ratings.per.user$median )
  colnames(recap.users) = c("userID", "age", "gender", "occupation", "zip.code","nb.movie.see","avg", "sd", "max", "min", "median")
  recap.users = recap.users[ ,-5]
  rm(ratings.per.user) 
  return(recap.users)
}
